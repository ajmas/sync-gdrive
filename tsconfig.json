{
    "compilerOptions": {
      "lib": [
        "es6",
        "es2015",
        "dom"
      ],
      "module": "commonjs",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es6",
      "noImplicitAny": false,
      "typeRoots": [
        "node_modules/@types"
      ],
      "rootDirs": ["src"],
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/"
      ]
    },
    "include": [
      "src/"
    ]
  }