{
  "name": "sync-gdrive",
  "version": "1.1.0",
  "description": "Module to synchronise a file or directory in Google Drive with the local file system",
  "main": "dist/index.js",
  "bin": {
    "sync-gdrive": "dist/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "sync-gdrive": "ts-node src/cli.ts",
    "build": "tsc",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "test": "mocha --exit --import=tsx -r esm test/*.ts"
  },
  "keywords": [
    "sync",
    "google-drive"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ajmas/sync-gdrive.git"
  },
  "author": "Andre John Mas",
  "license": "MIT",
  "dependencies": {
    "googleapis": "^134.0.0",
    "mime": "^4.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/node": "^16.18.96",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "chai": "^5.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "esm": "^3.2.25",
    "mocha": "^10.4.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "files": [
    "README.md",
    "dist"
  ]
}
